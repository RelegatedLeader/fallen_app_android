<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_up"
    android:background="@color/fallen">
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome Eagle!"
        android:textColor="@color/white"
        android:textSize="100px"
        android:layout_marginTop="30px"
        android:id="@+id/welcome_title"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_title"
        android:textColor="@color/white"
        android:text="We'll will need data about you, don't worry, we won't sell it."
        android:textSize="60px"
        android:layout_margin="50px"
        android:layout_centerHorizontal="true"
        android:id="@+id/welcome_message"
        />

    <TextView
        android:id="@+id/firstname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_message"
        android:layout_marginStart="50px"
        android:layout_marginTop="50px"
        android:layout_marginEnd="50px"
        android:text="First Name"
        android:textColor="@color/white" />

    <EditText
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstname_tv"
        android:textColor="@color/white"
        android:layout_marginLeft="50px"
            android:id="@+id/firstname_ev"

        />

    <TextView
        android:id="@+id/lastname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstname_ev"
        android:layout_marginStart="50px"
        android:layout_marginTop="50px"
        android:layout_marginEnd="50px"
        android:text="Last Name"
        android:textColor="@color/white" />

    <EditText
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastname_tv"
        android:textColor="@color/white"
        android:layout_marginLeft="50px"
        android:id="@+id/lastname_ev"

        />

    <TextView
        android:id="@+id/email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastname_ev"
        android:layout_marginStart="50px"
        android:layout_marginTop="50px"
        android:layout_marginEnd="50px"
        android:text="Email"
        android:textColor="@color/white"
        />

    <EditText
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_tv"
        android:textColor="@color/white"
        android:layout_marginLeft="50px"
        android:id="@+id/email_ev"

        />


    <TextView
        android:id="@+id/password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_ev"
        android:layout_marginStart="50px"
        android:layout_marginTop="50px"
        android:layout_marginEnd="50px"
        android:text="Password"
        android:textColor="@color/white"
        />


    <EditText
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_tv"
        android:textColor="@color/white"
        android:layout_marginLeft="50px"
        android:id="@+id/password_ev"

        />

    <TextView
        android:id="@+id/same_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_ev"
        android:layout_marginStart="50px"
        android:layout_marginTop="50px"
        android:layout_marginEnd="50px"
        android:text="Re-enter password"
        android:textColor="@color/white"
        />
    <EditText
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/same_password_tv"
        android:textColor="@color/white"
        android:layout_marginLeft="50px"
        android:id="@+id/same_password_ev"

        />


<Button
    android:id="@+id/sign_up_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/same_password_ev"
    android:text="Sign Up!"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50px"/>



</RelativeLayout>