<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fallen_subscription"
    android:background="@color/fallen">

    <!-- This scales the image to cover the whole screen -->
    />

    <!-- Button positioned at the bottom of the screen -->

    <ImageView
        android:id="@+id/main_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/futuristic_min_bot_ad2"
        app:layout_constraintEnd_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp">

    </ImageView>

    <Button
        android:id="@+id/join_fallen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_ad"
        app:layout_constraintVertical_bias="0.89"
        android:text="Join FALLEN+ NOW!"
        android:backgroundTint="@color/black"
        android:padding="30px"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
